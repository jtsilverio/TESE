    date         = {1978-09-01},
    doi          = {10.1007/BF01350112},
    file         = {/home/jeff/GoogleDrive/Papers/Daan_Slopsema_1978_Short-term rhythms in foraging behaviour of the common vole,Microtus arvalis.pdf},
    issn         = {1432-1351},
    journaltitle = {Journal of comparative physiology},
    keywords     = {Circadian Timing,Common Vole,Daily Pattern,Natural Behaviour,Wheel Running},
    langid       = {english},
    number       = {3},
    pages        = {215--227},
    shortjournal = {J. Comp. Physiol.},
    title        = {Short-Term Rhythms in Foraging Behaviour of the Common Vole,{{Microtus}} Arvalis},
